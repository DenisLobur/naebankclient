<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

  <fragment
      android:id="@+id/FirstFragment"
      android:name="com.example.naebank_client.LoginFragment"
      android:label="LoginFragment"
      tools:layout="@layout/fragment_login">

    <action
        android:id="@+id/action_LoginFragment_to_UserFragment"
        app:destination="@id/UserFragment" />

    <action
        android:id="@+id/action_LoginFragment_to_RegisterFragment"
        app:destination="@id/RegisterFragment" />
  </fragment>

  <fragment
      android:id="@+id/UserFragment"
      android:name="com.example.naebank_client.UserFragment"
      android:label="UserFragment"
      tools:layout="@layout/fragment_user">

<!--    <action-->
<!--        android:id="@+id/action_SecondFragment_to_FirstFragment"-->
<!--        app:destination="@id/FirstFragment" />-->
  </fragment>

  <fragment
      android:id="@+id/RegisterFragment"
      android:name="com.example.naebank_client.RegisterFragment"
      android:label="RegisterFragment"
      tools:layout="@layout/fragment_register">

    <action
        android:id="@+id/action_RegisterFragment_to_UserFragment"
        app:destination="@id/UserFragment" />
  </fragment>
</navigation>